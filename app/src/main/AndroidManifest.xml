<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="m2dl.mobe.vacances.challenge">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icongame"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icongame"
        android:supportsRtl="true"
        android:theme="@style/Theme.Challenge">
        <activity android:name=".game_over.GameOverActivity" android:screenOrientation="portrait"/>
        <activity android:name=".game.GameActivity" android:screenOrientation="portrait"/>
        <activity android:name=".settings.SettingsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".credits.CreditsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".rules.RulesActivity" android:screenOrientation="portrait"/>
        <activity android:name=".menu.MenuActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>